@model IEnumerable<IMS_Project.Models.profesor>

@{
    ViewBag.Title = "Profesor";
}

<div >
   
    <a href="@Url.Action("Create","Employee")" class="btn btn-primary"><i class="fa fa-plus"></i> Agregar Nuevo</a>  
</div>
<br /><br />
<div id="employee" class="table-responsive ">
    <table class="table table-condensed table-hover table-bordered table-striped table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ci)
            </th>
           
            
            <th></th>
        </tr>
        @if (Model!=null)
    {

        foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.especialidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ci)
                </td>
               
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Employee", new { id=item.id })" aria-label="Edit">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                    
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Employee",new { id= item.id})" aria-label="Delete">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    }

    </table>
</div>
